<h1>Profile Image Overlay</h1>

<div class="row">
  <div class="col-md-4 col-sm-4 col-xs-4">
    <% if current_user %>
      <%= current_user[:name] %><br>
      <%= image_tag current_user[:image_url] %><br>
    <% end %>
  </div>

  <div class="col-md-4 col-sm-4 col-xs-4">
    <p>Overlay Image</p>
    <%= image_tag 'overlay_flag.png' %>
  </div>

  <div class="col-md-4 col-sm-4 col-xs-4">
    <p>Result</p>
    <%= image_tag 'profile_overlay.png' %>
  </div>
</div>
